@model IEnumerable<MovieShop.Core.Entities.Genre>


@foreach(var genres in Model) {
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" name="Genres" id=@genres.Id value=@genres.Name>
        <label class="form-check-label" for=@genres.Id>@genres.Name</label>
    </div>
}